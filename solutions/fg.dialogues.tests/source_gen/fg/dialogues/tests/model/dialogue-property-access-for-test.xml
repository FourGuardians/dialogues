<?xml version = "1.0"?>
<?dialogue-tree version="1.0"?>

<document>
  <DialogueTree name="property access" entity="test">
    <Dialogue name="its a 3!!!">
      <Text text="it was a :3" />
      <ExitAction />
    </Dialogue>
    <Property name="prop1" />
    <Property name="prop2" />
    <EntryDialogue>
      <Text text="Testing props now :D" />
      <IfAction value="3">
        <PropertyReference ref:property="prop1" />
        <ToDialogueAction>
          <DialogueReference ref:dialogue="its a 3!!!" />
        </ToDialogueAction>
        <IfAction value="2">
          <PropertyReference ref:property="prop1" />
          <ReturnAction value="2" />
          <IfAction value="true">
            <PropertyReference ref:property="prop2" />
            <ReturnAction value="0" />
            <ExitAction />
          </IfAction>
        </IfAction>
      </IfAction>
    </EntryDialogue>
  </DialogueTree>
</document>